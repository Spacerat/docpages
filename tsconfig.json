{
  "$schema": "https://json.schemastore.org/tsconfig",

  "_version": "18.2.0",

  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "node16",
    "target": "es2022",
    "outDir": "lib/",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "allowJs": true
  },

  "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
